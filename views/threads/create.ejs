<%- include('../partials/header.ejs') %>

<section class="bg-dark text-light p-lg-0 pt-lg-5">
  <div class="container text-center py-5">
    <p class="lead">New Thread</p>
    <form action="/threads/create" method="POST">
      <div class="row justify-content-md-center">
        <div class="col-6 form-floating mb-3">
          <label class=" form-label text-dark ms-3" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="title" max="80" required />
          <div class="form-text error title"></div>
        </div>
      </div>
      <div class="row justify-content-md-center">
        <div class="col-6 form-floating mb-3 ">
            <label class="form-label text-dark ms-3" for="content">Post</label>
            <textarea class="form-control" style="height: 250px" id="content" name="content" max="3000" required></textarea>
            <div class="content error"></div>
          </div>
      </div>
      <div class="col"><button class="btn btn-primary" type="submit">Submit</button></div>
    </form>
  </div>
</section>
      
<%- include('../partials/footer.ejs') %>

<script>
    const form = document.querySelector("form");
    const titleError = document.querySelector(".title.error");
    const contentError = document.querySelector(".content.error");
  
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
  
      // reset errors
      titleError.textContent = "";
      contentError.textContent = "";
  
      // get values
      const author = '<%= user._id %>';
      const title = form.title.value;
      const content = form.content.value;
  
      try {
        const res = await fetch("/threads/create", {
          method: "POST",
          body: JSON.stringify({ author, title, content }),
          headers: { "Content-Type": "application/json" },
        });
        const data = await res.json();
        console.log(data);
        if (data.errors) {
          titleError.textContent = data.errors.title;
          contentError.textContent = data.errors.content;
        }
        if (data.user) {
          location.assign("/");
        }
      } catch (err) {
        console.log(err);
      }
    });
  </script>